@{
    int topMenu = Convert.ToInt32(ViewData["TopMenu"]);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="author" content="@ViewData["Author"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />

    <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/BlackLotus.css")" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="@Url.Content("~/")">
                    <img src="@Url.Content("~/Content/img/LotusIcon.png")" style="width:52px;" /></a>
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        <li class="@(topMenu == 1 ? "active" : "")"><a href="@Url.Content("~/Cards")">Cards</a></li>
                        <li class="@(topMenu == 2 ? "active" : "")"><a href="@Url.Content("~/Decks")">Decks</a></li>
                        <li>
                            <form class="navbar-search form-search">
                                <div class="input-append">
                                    <input type="text" class="span2 search-query">
                                    <button type="submit" class="btn"><span class="icon-search"></span></button>
                                </div>
                            </form>
                        </li>
                        <li class="@(topMenu == 3 ? "active" : "")"><a href="@Url.Content("~/LogIn")">LogIn</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="bodyContainer">
        @RenderBody()
    </div>
</body>
</html>
<footer>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/bootstrap.js")"></script>
</footer>
